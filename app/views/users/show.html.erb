<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
　<p>説明:<%= @user.caption %></p>
　
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>


</div>


<% @blogs.each do |blog| %>
<div>
  <% link_to blog_path(blog.id) do  %>
    <% attachment_image_tag blog, :image %>
  <% end %>
  <p>投稿ユーザー画像:<%= attachment_image_tag blog.user, :profile_image, :fill, 60, 60, fallback:"img/no-image.jpg"%></p>
  <p>説明:<%= @user.caption %></p>
  <p>ユーザーネーム:<%= blog.user.name %></p>
</div>
<% end %>
<%= paginate @blogs %>