<div class="container my-4">
  <div class-"row">

<h1>新規投稿</h1>

<% if @blog.errors.any? %>
 <%= @blog.errors.count %>件のエラーが発生しました
 <% @blog.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>



<%= form_with model:@blog, local:true do |f| %>

<div class ="col-md-12">
  <table class="table">
    <tr><th class="col-md-2"><%= f.label:投稿画像, class:"col-md-12" %></th>
    <td class="col-md-2"><%= f.attachment_field :image %></td></tr>

    <tr><th class="col-md-2"><%= f.label:タイトル, class:"col-xs-12" %></th>
    <td class="col-md-2"><%= f.text_field :title %></td>

    <tr><th class="col-md-2"><%= f.label:場所, class:"col-xs-12" %></th>
    <td class="select_field", "col-md-2"><%= f.collection_select :place_id, Place.all, :id,:name,{prompt: "--選択してください--"} %></td>
    
    <tr><th class="col-md-2"><%= f.label:タグ, class:"col-xs-12" %></th>
    <td class="select_field", "col-md-2">
    <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids', placeholder: "タグをつける。複数つけるには','で区切ってください。"%></td>

    <tr><th class="col-md-2"><%= f.label:本文, class:"col-xs-12" %></th>
    <td class="col-md-2"><%= f.text_area :body, rows: 10, cols: 70 %></th>

  <%= f.submit "投稿" %>
  <% end %>
  </table>
</div>

