<div class="container my-4">
  <div class-"row">

<h1>新規投稿</h1>

<% if @blog.errors.any? %>
 <%= @blog.errors.count %>件のエラーが発生しました
 <% @blog.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>



<%= form_with model:@blog, local:true do |f| %>

<div class ="col-md-12">
  <table class="table">
    <tr><th class="col-md-2"><%= f.label:投稿画像, class:"col-md-12" %></th>
    <td class="col-md-2"><%= f.attachment_field :image %></td></tr>

    <tr><th class="col-md-2"><%= f.label:タイトル, class:"col-xs-12" %></th>
    <td class="col-md-2"><%= f.text_field :title %></th>

    <tr><th class="col-md-2"><%= f.label:カテゴリー, class:"col-xs-12" %></th>
    <td class="col-md-2"><%= f.text_field :category %></th>

    <tr><th class="col-md-2"><%= f.label:本文, class:"col-xs-12" %></th>
    <td class="col-md-2"><%= f.text_area :body, rows: 10, cols: 70 %></th>

  <%= f.submit "投稿" %>
  <% end %>
  </table>
</div>

